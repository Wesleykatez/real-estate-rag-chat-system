# Monitoring and Observability Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10
LOG_BACKUP_COUNT=5
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_SYSLOG=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# SENTRY CONFIGURATION (Error Tracking)
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
ENVIRONMENT=production
RELEASE_VERSION=1.0.0
SENTRY_DEBUG=false
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =============================================================================
# EMAIL ALERTING CONFIGURATION
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# =============================================================================
# SLACK ALERTING CONFIGURATION
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK
SLACK_CHANNEL=#alerts
SLACK_USERNAME=RAG Monitoring Bot

# =============================================================================
# WEBHOOK ALERTING CONFIGURATION
# =============================================================================
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts
ALERT_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# PROMETHEUS CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=15
PROMETHEUS_SCRAPE_INTERVAL=15s

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_ALLOW_SIGN_UP=false

# =============================================================================
# ALERTMANAGER CONFIGURATION
# =============================================================================
ALERTMANAGER_PORT=9093
ALERTMANAGER_RESOLVE_TIMEOUT=5m
ALERTMANAGER_GROUP_WAIT=10s
ALERTMANAGER_GROUP_INTERVAL=10s
ALERTMANAGER_REPEAT_INTERVAL=1h

# =============================================================================
# DATABASE CONFIGURATION (for health checks)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rag_real_estate
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable

# =============================================================================
# CHROMADB CONFIGURATION (for health checks)
# =============================================================================
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_SSL=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=RAG Real Estate System
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
APP_DEBUG=false

# =============================================================================
# PERFORMANCE MONITORING THRESHOLDS
# =============================================================================
CPU_USAGE_THRESHOLD=80
MEMORY_USAGE_THRESHOLD=85
DISK_USAGE_THRESHOLD=85
RESPONSE_TIME_THRESHOLD=2.0
ERROR_RATE_THRESHOLD=5.0
RAG_QUERY_TIMEOUT=30.0

# =============================================================================
# LOG RETENTION CONFIGURATION
# =============================================================================
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=90
ALERT_RETENTION_DAYS=7

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
MONITORING_SECRET_KEY=your_monitoring_secret_key_here
ENABLE_HTTPS=true
SSL_CERT_FILE=/path/to/cert.pem
SSL_KEY_FILE=/path/to/key.pem

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development environment
DEV_MODE=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_METRICS_EXPORT=true
